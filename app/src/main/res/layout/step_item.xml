<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="step"
            type="com.example.bakingapp.model.Steps" />

        <variable
            name="stepItemClick"
            type="com.example.bakingapp.ui.detail.adapters.StepsAdapter.OnStepClickListener" />
        
        <variable
            name="position"
            type="int" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> stepItemClick.onStepClick(position)}">

        <TextView
            android:id="@+id/step_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@{step.shortDescription}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Recipe Introduction" />

    </FrameLayout>
</layout>